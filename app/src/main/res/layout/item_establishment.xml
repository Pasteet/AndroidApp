<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/establishment_box"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/establishmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Establishment Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/establishmentAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Establishment Address"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/establishmentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Establishment Type"
        android:textSize="14sp" />
</LinearLayout>
